<h2>Your Reminders</h2>

<ul>
  <% if (reminders.length === 0) { %>
  <li class="empty">No reminders yet.</li>
  <% } else { %> <% reminders.forEach(r => { %>
  <li>
    <div class="reminder-text">
      <strong><%= r.title %></strong>
      <span class="due">Due: <%= r.due_date.toISOString().slice(0,10) %></span>
    </div>
    <form
      action="/reminders/delete/<%= r.id %>"
      method="POST"
      style="display: inline"
    >
      <button
        type="submit"
        class="delete-btn"
        onclick="return confirm('Delete this reminder?')"
      >
        Delete
      </button>
    </form>
  </li>
  <% }); %> <% } %>
</ul>

<h3>Add New</h3>
<form action="/reminders/add" method="POST">
  <label for="title">Title:</label>
  <input id="title" name="title" placeholder="Title" required />
  <label for="due_date">Due Date:</label>
  <input id="due_date" type="date" name="due_date" required />
  <button type="submit" class="add-btn">Add</button>
</form>

<a href="/dashboard" class="back-btn">Back to Dashboard</a>

