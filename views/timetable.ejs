<h2>Your Timetable</h2>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Subject</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (timetable.length === 0) { %>
    <tr>
      <td colspan="5" style="text-align: center">No timetable entries yet.</td>
    </tr>
    <% } else { %> <% timetable.forEach(item => { %>
    <tr>
      <td><%= item.day %></td>
      <td><%= item.subject %></td>
      <td><%= item.start_time %></td>
      <td><%= item.end_time %></td>
      <td>
        <form
          action="/timetable/delete/<%= item.id %>"
          method="POST"
          style="display: inline"
        >
          <button type="submit" onclick="return confirm('Delete this entry?')">
            Delete
          </button>
        </form>
      </td>
    </tr>
    <% }); %> <% } %>
  </tbody>
</table>

<h3>Add New</h3>
<form action="/timetable/add" method="POST">
  <label for="day">Day:</label>
  <select name="day" required>
    <option value="">Select Day</option>
    <option>Monday</option>
    <option>Tuesday</option>
    <option>Wednesday</option>
    <option>Thursday</option>
    <option>Friday</option>
    <option>Saturday</option>
    <option>Sunday</option>
  </select>

  <label for="subject">Subject:</label>
  <input name="subject" placeholder="Subject" required />

  <label for="start_time">Start Time:</label>
  <input type="time" name="start_time" required />

  <label for="end_time">End Time:</label>
  <input type="time" name="end_time" required />

  <button type="submit">Add</button>
</form>

<a href="/dashboard" class="back-btn">Back to Dashboard</a>

